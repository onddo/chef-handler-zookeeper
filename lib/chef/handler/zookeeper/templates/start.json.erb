<%= require 'json'
data = {
  "chef_version" => Chef::VERSION,
  "ohai_version" => Ohai::VERSION,
  "start_time" => run_status.kind_of?(Chef::RunStatus) ? start_time.to_s : Time.now.to_s,
  "status" => "running",
}

if self.respond_to?(:node)
  data['environment'] = self.node.chef_environment
end

data.to_json
%>
